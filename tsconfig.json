{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "sourceMap": true,
    // "declarationMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    // "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
